<!DOCTYPE html>
<html>
<head>
  <title>Challenge Form</title>
  <%= stylesheet_link_tag '_form_challenge' %>
</head>
<body>
  <div class="container">
    <h1>Challenge Form</h1>

    <%= form_with(model: @challenge, url: @challenge.new_record? ? challenges_path : challenge_path(@challenge), local: true, class: "form") do |form| %>
      <% if @challenge.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>
  
          <ul>
            <% @challenge.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <br>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
      </div>
      <br>

      <div class="field">
        <%= form.label :duration %>
        <%= form.number_field :duration, class: "form-control" %>
      </div>
      <br>

      <%= form.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</body>
</html>
